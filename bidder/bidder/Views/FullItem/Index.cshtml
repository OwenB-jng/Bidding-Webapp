@{
    ViewData["Title"] = "FullItem";
}
<div class="auction-item">
    <div class="auction-image">
        <img src="@ViewBag.auction.image" alt="@ViewBag.auction.itemName">
    </div>
    <div class="auction-details">
        <h1>@ViewBag.auction.itemName</h1>
        <p>@ViewBag.auction.itemDescription</p>
        <div class="auction-bids">
            <div class="auction-bid">
                <span>Starting Bid:</span>
                <span>@ViewBag.auction.startingBid</span>
            </div>
            <div class="auction-bid">
                <span>Current Bid:</span>
                <span>@ViewBag.auction.currentBid</span>
            </div>
            <div class="auction-bid">
                <span>Winning Bid:</span>
                <span>@ViewBag.auction.winningBid</span>
            </div>
        </div>
        <div class="auction-times">
            <div class="auction-time">
                <span>Start Time:</span>
                <span>@ViewBag.auction.startTime</span>
            </div>
            <div class="auction-time">
                <span>End Time:</span>
                <span>@ViewBag.auction.endTime</span>
            </div>
        </div>
        <div class="auction-type">
            <span>Type:</span>
            <span>@ViewBag.auction.type</span>
        </div>
        <div class="auction-condition">
            <span>Condition:</span>
            <span>@ViewBag.auction.condition</span>
        </div>
        <div class="bidButton">
            <label for="bid">Bid:</label>
            <input type="text" id="bid" name="bid" required>
            <form asp-action="PlaceBid" method="POST">
                <input type="hidden" name="bidbtn" id="bidbtn" value="@ViewBag.auction.Id" />
                <button type="submit">Place Bid</button>
            </form>
        </div>
    </div>
</div>
